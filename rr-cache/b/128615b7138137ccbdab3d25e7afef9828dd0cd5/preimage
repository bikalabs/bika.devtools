SelectDate
    [Arguments]  ${Element}=
    ...          ${Date}=
    Click Element  ${Element}
    Wait Until Page Contains Element  ui-datepicker-div
    ${Date} =            Convert To Integer    ${Date}
    ${Date} =            Convert To String     ${Date}
    Click Link  ${Date}
    sleep                0.5


SelectPrevMonthDate
    [Arguments]  ${Element}=
    ...          ${Date}=
    Click Element        ${Element}
    Wait Until Page Contains Element  ui-datepicker-div
    Click Element        xpath=//div[@id='ui-datepicker-div']//a[@title='Prev']
    sleep                0.5
    ${Date} =            Convert To Integer    ${Date}
    ${Date} =            Convert To String     ${Date}
    Click Link           ${Date}
    sleep                0.5

